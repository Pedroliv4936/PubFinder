            <Insets left="40.0" right="40.0" top="20.0" />
         </VBox.margin>
         <font>
            <Font name="Product Sans" size="14.0" />
         </font>
      </JFXButton>
      <JFXButton id="RegisterButton" fx:id="RegisterButton" graphicTextGap="10.0" lineSpacing="5.0" prefHeight="35.0" prefWidth="295.0" style="-fx-background-color: #ffe400;" stylesheets="@layout.css" text="Registrar-me" wrapText="true">
         <font>
            <Font name="Product Sans" size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="50.0" right="50.0" top="20.0" />
         </VBox.margin>
      </JFXButton>
   </children>
