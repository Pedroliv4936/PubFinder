<VBox alignment="CENTER" prefHeight="600.0" prefWidth="335.0" style="-fx-background-color: #353535;" stylesheets="@layout.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.views.LoginScreenController">
   <children>
      <ImageView fitHeight="182.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@res/imgs/logoPubFinder.png" />
